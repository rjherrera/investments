<p id="notice"><%= notice %></p>

<h1>Prospects</h1>

<table class="ui sortable celled table">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>RUT</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th>Rango de renta</th>
      <th>Pre-aprobación</th>
      <th>Fecha creación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.name %></td>
        <td><%= prospect.last_name %></td>
        <td><%= prospect.rut %></td>
        <td><%= prospect.cellphone %></td>
        <td><%= prospect.email %></td>
        <td><%= prospect.salary %></td>
        <td><%= prospect.preapproval %></td>
        <td><%= prospect.created_at %></td>
        <td class="selectable negative center aligned"><%= link_to 'Eliminar', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prospect', new_prospect_path %>

<script type="text/javascript">
  $( document ).ready(function() {
    $('table').tablesort();
  });
</script>
