<h1 style="width: 95%; margin-left: 2.5%; margin-top: 80px;">Prospects</h1>

<p id="notice" style="width: 95%; margin-left: 2.5%;""><%= notice %></p>

<table class="ui sortable celled table" style="width: 95%; margin-left: 2.5%;">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>RUT</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th>Rango de renta</th>
      <th>Pre-aprobación</th>
      <th>Fecha creación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.name %></td>
        <td><%= prospect.last_name %></td>
        <td><%= prospect.rut %></td>
        <td><%= prospect.cellphone %></td>
        <td><%= prospect.email %></td>
        <td><%= prospect.salary %></td>
        <td><%= prospect.preapproval %></td>
        <td><%= prospect.created_at %></td>
        <td class="selectable negative center aligned"><%= link_to 'Eliminar', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script type="text/javascript">
  $( document ).ready(function() {
    $('table').tablesort();
  });
</script>
