<!-- PROJECTS CONTAINER -->
<div class="ui fluid container" id="projects_container">
  <div class="ui fluid container items-holder">
    <div class="ui container items-container">
        <div class="ui container items-left">
          <h1 class="ui mini inverted header">
              <div class="content title">
              Conoce nuestros proyectos
              </div>
              <div class="sub header text">
                <i>Descubre nuestra gran variedad para invertir</i>
              </div>
            </h1>
        </div>
        <div class="ui container items-right">
          <div class="ui special two stackable cards">
            <% @projects.each do |project| %>
              <div class="card">
                <div class="blurring dimmable image">
                  <div class="ui dimmer">
                    <div class="content">
                      <div class="center">
                        <%= link_to 'Ver Proyecto', project, class: "ui inverted button" %>
                      </div>
                    </div>
                  </div>
                  <img src="<%= project.image_url %>">
                </div>
                <div class="content">
                  <div class="header"><%= project.name %></div>
                  <div class="meta">
                    <span class="date"><%= project.due_date %></span>
                  </div>
                </div>
                <div class="extra content">
                  <i class="building icon"></i>
                  <%= project.stage %>
                </div>
              </div>
            <% end %>
            <button class="ui big white inverted button" style="height: 10%; margin-top: 22%; margin-left: 16%;">Ver más</button>
          </div>

        </div>
      </div>
  </div>
</div>
<!-- PROJECTS CONTAINER -->


<script type="text/javascript">
  $('.special.cards .image').dimmer({
    on: 'hover'
  });

  $('#header_container').slick({
    arrows: false,
    dots: true,
    autoplay: true,
    autoplaySpeed: 5000,
    // infinite: true,
    speed: 2000,
    fade: true
  });

  $('#statistics').slick({
    arrows: false,
    autoplay: true,
    autoplaySpeed: 2000,
    slidesToShow: 4,
    slidesToScroll: 1,
    pauseOnFocus: false,
    pauseOnHover: false,
    responsive: [
      {
        breakpoint: 1000,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
        }
      },
      {
        breakpoint: 700,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });

  $('#quotes').slick({
    arrows: false,
    autoplay: true,
    autoplaySpeed: 7500,
    // infinite: true,
    speed: 2000,
    fade: true,
    pauseOnFocus: false,
    pauseOnHover: false
  });
</script>