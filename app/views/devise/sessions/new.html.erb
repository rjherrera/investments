<div class="form-container">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "ui form"}) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, :required => true, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="ui checkbox">
        <input type="checkbox" name="admin[remember_me]">
        <label>Remember me</label>
      </div>
    </div>
    <% end -%>

    <button class="ui button" type="submit">Log in</button>

  <% end %>

<!--   <%= render "devise/shared/links" %> -->

</div>
